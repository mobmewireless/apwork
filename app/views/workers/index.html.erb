<%- model_class = Worker -%>
<div class="row">
	<div class="col-xs-4">
<%= link_to t('.new', :default => "New Worker"),
            new_worker_path,
            :class => 'btn btn-primary' %>
	</div>
	<div class="col-xs-4" id="workers_datatable_filter">
		<input class="form-control" id="worker_name" name="worker[name]" type="text" placeholder="Search">
	</div>
</div>
<hr />
<table class="table table-striped table-bordered datatable">
  <thead>
    <tr>
      <th data-class="expand"><%= model_class.human_attribute_name(:name) %></th>
      <th data-hide="phone"><%= model_class.human_attribute_name(:mobile) %></th>
      <th>Status</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.mobile %></td>
        <td><%= worker.job.humanize %>, <%= worker.assigned_text %> at <%= worker.location %></td>
        <td>
					<%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_worker_path(worker), :class => 'btn btn-default btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
